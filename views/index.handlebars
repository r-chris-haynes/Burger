<h1>Eat Da Burger</h1>
<img src="./assets/img/burger.png">

{{#each burgers}}
<h3>{{this.burger_name}}</h3>
<h3>{{this.devoured}}</h3>
{{/each}}


<form class="create-form">
    <div class="form-group">
        <label for="bu">Type of Burger</label>
        <input type="text" id="bu" name="burger_name">
    </div>
    <button type="submit">Add Burger</button>
    <p>Enter a burger you want and click submit</p>
</form>