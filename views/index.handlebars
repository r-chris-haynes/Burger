<div class="d-flex justify-content-lg-center">
    <h1>Eat Da Burger</h1>
</div>

<div class="d-flex justify-content-lg-center">
    <img src="./assets/img/burger.png">
</div>

<h5 id="instructions" class="d-flex justify-content-center">Enter a burger you want to devour!</h5>

<div class="d-flex justify-content-lg-center">
    <form class="create-form">
        <div class="form-group">
            <input type="text" id="bu" class="form-control-lg" name="burger_name" placeholder="Order Here!">
            <button type="submit" class="btn btn-success">Add a Burger</button>
        </div>
    </form>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 text-center">
            <h5 class="burgers">Order Up</h5>
            <br>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <h6> {{this.id}} - {{this.burger_name}} <span>
                        <button class="btn btn-success eat-burger" data-id="{{id}}" data-newdevour="{{devouredState}}">
                            {{#if devour}}Digest!{{else}}Devour!{{/if}}
                        </button>
                    </span></h6>
                <br>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6 text-center">
            <h5 class="burgers">Devoured</h5>
            <br>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <h6> {{this.id}} - {{this.burger_name}} <span>
                        {{!-- <button class="btn btn-danger del-burger" data-id="{{id}}" data-newdevour="{{devouredState}}">
                            {{#if devour}}Digest!{{else}}Delete{{/if}}
                        </button> --}}
                    </span></h6>
                <br>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>