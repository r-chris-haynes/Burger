<div class="d-flex justify-content-lg-center">
    <h1>Eat Da Burger</h1>
</div>

<div class="d-flex justify-content-lg-center">

    <img src="./assets/img/burger.png">

</div>

<div class="d-flex justify-content-lg-center">
    <form class="create-form">
        <div class="form-group">
            <br>
            <h6 class="d-flex justify-content-center">Enter a burger you want to devour!</h6>
            <input type="text" id="bu" name="burger_name">
            <button type="submit" class="btn btn-success">Add a Burger</button>
        </div>
    </form>
</div>

<br>

<div class="container">
    <div class="row">
        <div class="col-md-6 text-center">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <h5> {{this.id}} - {{this.burger_name}} <span>
                        <button class="btn btn-success eat-burger" data-id="{{id}}" data-newdevour="{{devouredState}}">
                            {{#if devour}}Digest!{{else}}Devour!{{/if}}
                        </button>
                    </span></h5>
                <br>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        {{!-- <hr> --}}
        <div class="col-md-6 text-center">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <h5> {{this.id}} - {{this.burger_name}} <span>
                        <button class="btn btn-danger del-burger" data-id="{{id}}" data-newdevour="{{devouredState}}">
                            {{#if devour}}Digest!{{else}}Delete{{/if}}
                        </button>
                    </span></h5>
                <br>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>